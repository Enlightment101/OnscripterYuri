{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
        "configurations": [
        {
            "name": "win32 cppdbg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build_mingw32/onsyuri.exe",
            "args": ["--debug:0", // "--fullscreen2",
                // "--width", "960", "--height", "544", 
                "--root", "test", "--font", "test/default.ttf", "--save-dir", "save"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build_mingw32",
            "environment": [
                {"name": "msys2sdk", "value": "D:/Software/env/msys2"},
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "D:/Software/env/msys2/mingw32/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "cppdbg GDB launch (Windows) start!",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }, 
            ]
        },
        {
            "name": "linux64 cppdbg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_linux64/onsyuri",
            "args": ["--debug:0", "--width", "960", "--height", "544", 
                "--root", "test", "--font", "test/default.ttf", "--save-dir", "save"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build_linux64",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ]
        },
    ]
}