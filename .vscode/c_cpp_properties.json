{
    "env": { // edit your env here
        "msys2sdk": "D:/Software/env/msys2",
        "vitasdk": "D:/Software/env/sdk/psvsdk",
        "emsdk": "D:/software/env/sdk/emsdk"
    },
    "configurations": [
        {
            "name": "Mingw32",
            "includePath": [
                "${workspaceFolder}/src/onsjh/**",
                "${msys2sdk}/mingw32/include"
            ],
            "defines": [
                "_WIN32",
                "USE_LUA",
                "USE_PARALLEL",
                "USE_BUILTIN_LAYER_EFFECTS",
                "USE_GLES",
                "USE_FILELOG"
            ],
            "compilerPath": "${msys2sdk}/mingw32/bin/gcc.exe",
            "intelliSenseMode": "windows-gcc-x86",
            "compilerArgs": [ "-m32" ]
        },
        {
            "name": "Mingw64",
            "includePath": [
                "${workspaceFolder}/src/onsyuri/**",
                "${msys2sdk}/mingw64/include"
            ],
            "defines": [
                "_WIN32",
                "USE_LUA",
                "USE_PARALLEL",
                "USE_SIMD",
                "USE_SIMD_X86_SSE2",
                "USE_BUILTIN_LAYER_EFFECTS",
                "USE_GLES",
                "USE_FILELOG"
            ],
            "compilerPath": "${msys2sdk}/mingw64/bin/gcc.exe",
            "intelliSenseMode": "windows-gcc-x64",
            "compilerArgs": [ "-m64" ]
        },
        {
            "name": "Linux64",
            "includePath": [
                "${workspaceFolder}/src/onsyuri/**",
                "/usr/include",
                "/usr/include/SDL2",
                "/usr/include/lua5.3"
            ],
            "defines": [
                "LINUX",
                "USE_LUA",
                "USE_PARALLEL",
                "USE_SIMD",
                "USE_SIMD_X86_SSE"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c99",
            "cppStandard": "c++11",
            "intelliSenseMode": "linux-gcc-x64",
            "compilerArgs": []
        },
        {
            "name": "Web",
            "includePath": [
                "${workspaceFolder}/src/onsyuri/**",
                "${workspaceFolder}/thirdparty/build/arch_wasm/include",
                "${emsdk}/upstream/emscripten/cache/sysroot/include"
            ],
            "defines": [
                "WEB",
                "LINUX",
                "USE_LUA",
                "USE_PARALLEL",
                "USE_BUILTIN_LAYER_EFFECTS"
            ],
            "compilerPath": "${emsdk}/upstream/bin/clang",
            "cStandard": "c99",
            "cppStandard": "c++11",
            "intelliSenseMode": "linux-clang-x64"
        }
    ],
    "version": 4
}